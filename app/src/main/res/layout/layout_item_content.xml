<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_start"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="股票代码"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_left_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="股票代码"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_end"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_more"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:src="@mipmap/ic_launcher"
            android:text="股票代码"
            android:textColor="#000000" />

    </LinearLayout>


    <com.example.linkagelayout.ObservableScrollView
        android:id="@+id/sc_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/ll_end"
        android:layout_toEndOf="@id/ll_start"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="5">

                <TextView
                    android:id="@+id/et_baojia"
                    android:layout_width="wrap_content"
                    android:text="123"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/et_baojiaRate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="123"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/et_singlePrice"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="123"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/et_num"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="123"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/et_time"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:text="123"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="match_parent"
                android:text="这是备注，这是备注，这是备注，这是备注，这是备注，这是备注，
这是备注，这是备注，这是备注，这是备注，这是备注。"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>
    </com.example.linkagelayout.ObservableScrollView>

</RelativeLayout>