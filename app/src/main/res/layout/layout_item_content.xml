<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_start"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bg_with_border"
            android:gravity="center_vertical|left"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:text="股票代码"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_left_remark"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_bg_with_border"
            android:gravity="center_vertical|left"
            android:paddingLeft="15dp"
            android:text="备注："
            android:textColor="#333333"
            android:textSize="12sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.example.linkagelayout.ObservableScrollView
        android:id="@+id/sc_rl_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ll_start"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="375dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:weightSum="5">

                    <TextView
                        android:id="@+id/et_baojia"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_baojiaRate"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_singlePrice"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_num"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_time"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <TextView
                    android:id="@+id/tv_remark"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/shape_bg_with_border"
                    android:text="这是备注，这是备注，这是备注，这是备注，这是备注，这是备注，
这是备注，这是备注，这是备注，这是备注，这是备注。"
                    android:textColor="#333333"
                    android:textSize="12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:id="@+id/ll_end"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/shape_bg_with_border"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ic_more"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:src="@mipmap/ic_launcher"
                    android:text="股票代码"
                    android:textColor="#000000" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.example.linkagelayout.ObservableScrollView>

</RelativeLayout>