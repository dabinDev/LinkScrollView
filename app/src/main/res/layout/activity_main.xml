<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll_top_root"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_with_border"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="15dp"
            android:text="白酒行业"
            android:textColor="#000000"
            android:textSize="15sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <com.example.linkagelayout.ObservableScrollView
                android:id="@+id/scTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp">

                    <TextView
                        android:id="@+id/et_baojia"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_baojiaRate"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_singlePrice"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_num"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_time"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="123"
                        android:textColor="#333333"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/et_opt"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/shape_bg_with_border"
                        android:gravity="center"
                        android:text="操作"
                        android:textColor="#333333"
                        android:textSize="12sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </com.example.linkagelayout.ObservableScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>